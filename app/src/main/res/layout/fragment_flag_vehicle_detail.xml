<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alive_n_clickin.commutity.presentation.flagreport.FlagVehicleDetailFragment"
    android:weightSum="100"
    android:padding="20dp"
    android:id="@+id/flagDetail"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="10"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:id="@+id/flagDetailDescription"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/flagLineNumberImage"
        android:layout_alignEnd="@+id/flagDetailCommentField" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:id="@+id/flagLineNumberImage"
        android:layout_gravity="right"
        android:layout_marginLeft="728dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="24.60"
        android:id="@+id/flagDetailCommentField"
        android:layout_gravity="center"
        android:gravity="top"
        android:padding="10dp"
        android:background="@android:color/white"
        android:hint="@string/flag_comment"
        android:layout_above="@+id/flagDetailFooter"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flagDetailImage"
        android:layout_below="@+id/flagDetailDescription"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/flagDetailCommentField"
        android:layout_alignEnd="@+id/flagDetailCommentField" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/flagDetailFooter"
        android:minWidth="80dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="20"
            android:text="@string/flag_send"
            android:id="@+id/flagDetailSendButton"
            android:textSize="14dp"
            android:minWidth="88dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
    </RelativeLayout>

</RelativeLayout>
